!!! 5
%html
  %head
    %meta{:charset => "utf-8"}/
    %title Requests App
    %link{:rel => "stylesheet", :media => "screen, projection", :href => "#{url '/stylesheets/bootstrap.min.css'}"}
    %link{:rel => "stylesheet", :media => "screen, projection", :href => "#{url '/stylesheets/bootstrap-responsive.min.css'}"}
    %link{:rel => "stylesheet", :media => "screen, projection", :href => "#{url '/stylesheets/style.css'}"}
    %script{src: "#{url 'javascripts/libs/require.js'}", data: { main: "javascripts/main" }}
    /[if lt IE 9]
      %script{:src => "http://html5shiv.googlecode.com/svn/trunk/html5.js"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "#"} Requests App
    = yield
    = javascripts
    :javascript
      window.MyApp = {};
      MyApp.bootstrap = function() {
          return {
              requests: '#{j @requests.to_json}',
              scopes: '#{j @scopes.to_json}'
          };
      };
    / #data{style: "display: none;"}
    /   = @requests.to_json